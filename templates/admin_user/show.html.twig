{% extends 'base-admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>
        <a class="btn btn-primary" href="{{ path('admin_user_index', {'role': role}) }}">Retour</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    

<a href="{{ path('admin_user_edit', {'id': user.id, 'role': role}) }}">
    <i class="fa fa-pencil btn btn-primary-edit my-1" aria-hidden="true"></i>
</a>


    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
