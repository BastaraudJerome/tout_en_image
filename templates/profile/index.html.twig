        {% endblock %}
        {% block javascripts %}
            <script>
                if($('.alert').length>0){               
                    setTimeout(function(){                    
                        $('.alert').fadeOut(500, function(){$(".alert").remove()});
                    },2000);
                }
            </script>
        {% endblock %}
        