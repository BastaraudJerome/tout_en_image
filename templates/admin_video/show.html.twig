{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>
<a class="btn btn-primary my-1" href="{{ path('admin_video_index') }}">
    Retour
</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td><video width="160" height="120" controls>
                        <source src="{{ asset('image/video/' ~ video.videoName ) }}" alt="{{ video.titre }}" type="video/mp4" class="img-list-admin">
                    </video></td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ video.updatedAt ? video.updatedAt|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ video.categorie }}</td>
            </tr>
            
        </tbody>
    </table>

    

<a href="{{ path('admin_video_edit', {'id': video.id}) }}">
    <i class="fa fa-pencil btn btn-primary-edit my-1" aria-hidden="true"></i>
</a>


    {{ include('admin_video/_delete_form.html.twig') }}
{% endblock %}
